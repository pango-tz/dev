{
  "name": "@pango/framework",
  "version": "1.0.0-alpha.1",
  "description": "Core styles for Pango",
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "authors": [
    "Christopher Washington <c.arnez.washington@gmail.com>"
  ],
  "license": "MIT",
  "main": "bundles/churro-logger.umd.js",
  "module": "index.js",
  "scripts": {
    "karma": "karma start --single-run",
    "test": "npm run karma",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean:pre": "rimraf dist && npm run pull:remote",
    "pull:remote": "git clone https://github.kdc.capitalone.com/churro/churro-logger.git dist",
    "clean:post": "rimraf src/**/*.ngfactory.ts",
    "copy": "cpy dist-files/LICENSE package.json README.md dist",
    "build:js": "ngc -p tsconfig.dist.json",
    "build:testing": "ngc -p tsconfig.testing.json",
    "build:umd": "rollup -c rollup.config.js",
    "build:umd:testing": "rollup -c rollup-testing.config.js",
    "build:uglify": "uglifyjs -c --screw-ie8 --comments -o ./dist/bundles/styles.min.umd.js ./dist/bundles/styles.umd.js",
    "build:uglify:testing": "uglifyjs -c --screw-ie8 --comments -o ./dist/bundles/styles-testing.min.umd.js ./dist/bundles/styles-testing.umd.js",
    "bundle:main": "npm run build:js && npm run build:umd && npm run build:uglify",
    "bundle:testing": "npm run build:testing && npm run build:umd:testing && npm run build:uglify:testing",
    "prebuild": "npm run test && npm run clean:pre",
    "postbuild": "npm run clean:post && npm run copy",
    "build": "npm run bundle:main && npm run bundle:testing",
    "publish": "npm run build && cd dist && git add . && git commit -m 'published' && git push -u origin master",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@angular/common": "^2.2.4",
    "@angular/compiler": "^2.2.4",
    "@angular/compiler-cli": "^2.2.4",
    "@angular/platform-browser": "^2.2.4",
    "@angular/platform-browser-dynamic": "^2.2.4",
    "@angular/platform-server": "^2.2.4",
    "@angular/router": "^3.2.4",
    "awesome-typescript-loader": "^3.0.0-beta.9",
    "conventional-changelog-cli": "^1.2.0",
    "core-js": "^2.4.1",
    "cpy-cli": "^1.0.1",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine-core": "^2.5.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-jasmine": "^0.3.8",
    "karma-mocha-reporter": "^2.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript-preprocessor": "0.0.21",
    "karma-webpack": "^1.7.0",
    "npm-run-all": "^3.1.2",
    "path": "^0.12.7",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.4",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "tslint": "^4.0.0",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.0.10",
    "uglifyjs": "^2.4.10",
    "webpack": "^2.1.0-beta.21",
    "zone.js": "^0.6.21"
  },
  "dependencies": {
    "@angular/core": "^2.2.4",
    "rxjs": "5.0.0-beta.12"
  }
}
