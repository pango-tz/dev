{
  "version": "0.1.0",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "lib": ["es5", "dom", "es2015"],
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "churro-logger": ["./"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "genDir": ".ngc"
  }
}